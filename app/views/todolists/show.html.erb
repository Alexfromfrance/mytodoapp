  <%= f.submit "Inviter un utilisateur" %>
  <!-- [...] -->
<% end %>

<%= link_to "Ajouter une tâche",  new_todolist_listitem_path(@todolist) %>

<%= link_to "Retour à l'index",  todolists_path %>

