<% @todolist.listitems.each do |f| %>
  <% if f.status == false %>
  <%= f.title  %>
  <%= link_to "Sauvegarder cette tâche",  complete_listitem_path(f), method: :put, data: { confirm: "Etes vous sûr de vouloir sauvegarder cette tâche ?"} %>
  <% end %>
<% end %>

